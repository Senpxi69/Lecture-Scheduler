<%- include("partials/header.ejs") %>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <% instructors.forEach(instructor => { %>
      <div class="col">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title text-center">Name: <%= instructor.name %></h5>
            <p class="card-text">Contact: <%= instructor.contact %></p>
            <p class="card-text">Expertise: <%= instructor.expertise %></p>
          </div>
        </div>
      </div>
    <% }); %>
    <a href="/add-instructor"><button class="btn btn-primary"> Add Instructor </button></a>
  </div>

<%- include("partials/footer.ejs") %>